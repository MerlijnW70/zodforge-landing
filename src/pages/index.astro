---
// ZodForge Cloud Landing Page - Production Ready
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import TrustBadges from '../components/TrustBadges.astro';
import Features from '../components/Features.astro';
import ComparisonTable from '../components/ComparisonTable.astro';
import SocialProof from '../components/SocialProof.astro';
import Pricing from '../components/Pricing.astro';
import FAQ from '../components/FAQ.astro';
import ChangelogPreview from '../components/ChangelogPreview.astro';
import EmailCapture from '../components/EmailCapture.astro';
import StickyCTA from '../components/StickyCTA.astro';
---

<BaseLayout>
  <main>
    <StickyCTA />
    <Hero />
    <TrustBadges />
    <Features />
    <ComparisonTable />
    <SocialProof />
    <Pricing />
    <FAQ />
    <ChangelogPreview />
    <EmailCapture />

    <!-- Footer -->
    <footer class="py-12 px-4 border-t border-gray-800">
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-4 gap-8 mb-8">
          <!-- Brand -->
          <div class="col-span-2 md:col-span-1">
            <h3 class="text-xl font-bold mb-4 gradient-text">ZodForge Cloud</h3>
            <p class="text-gray-400 text-sm">
              AI-powered schema refinement API. Built with TypeScript, Zod, and love.
            </p>
          </div>

          <!-- Product -->
          <div>
            <h4 class="font-semibold mb-4">Product</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li><a href="#features" class="hover:text-primary-400 transition-colors">Features</a></li>
              <li><a href="#pricing" class="hover:text-primary-400 transition-colors">Pricing</a></li>
              <li>
                <a
                  href="https://zodforge-dashboard.vercel.app"
                  target="_blank"
                  class="hover:text-primary-400 transition-colors"
                >
                  Dashboard
                </a>
              </li>
              <li>
                <a
                  href="https://web-production-f15d.up.railway.app/api/v1/health"
                  target="_blank"
                  class="hover:text-primary-400 transition-colors"
                >
                  API Status
                </a>
              </li>
              <li><a href="/docs" class="hover:text-primary-400 transition-colors">Documentation</a></li>
            </ul>
          </div>

          <!-- Resources -->
          <div>
            <h4 class="font-semibold mb-4">Resources</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li>
                <a
                  href="https://github.com/MerlijnW70/zodforge-api"
                  target="_blank"
                  class="hover:text-primary-400 transition-colors"
                >
                  GitHub
                </a>
              </li>
              <li>
                <a
                  href="https://www.npmjs.com/package/@zodforge/cloud"
                  target="_blank"
                  class="hover:text-primary-400 transition-colors"
                >
                  TypeScript SDK
                </a>
              </li>
              <li>
                <a
                  href="https://www.npmjs.com/package/zodforge"
                  target="_blank"
                  class="hover:text-primary-400 transition-colors"
                >
                  CLI Tool
                </a>
              </li>
              <li><a href="/changelog" class="hover:text-primary-400 transition-colors">Changelog</a></li>
            </ul>
          </div>

          <!-- Legal -->
          <div>
            <h4 class="font-semibold mb-4">Legal</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li><a href="/privacy" class="hover:text-primary-400 transition-colors">Privacy Policy</a></li>
              <li><a href="/terms" class="hover:text-primary-400 transition-colors">Terms of Service</a></li>
              <li><a href="/security" class="hover:text-primary-400 transition-colors">Security</a></li>
            </ul>
          </div>
        </div>

        <!-- Copyright -->
        <div class="pt-8 border-t border-gray-800 flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-sm text-gray-400">
            Â© {new Date().getFullYear()} ZodForge. Built with
            <a href="https://claude.com/claude-code" target="_blank" class="text-primary-400 hover:underline">
              Claude Code
            </a>
          </p>
          <div class="flex gap-6">
            <a
              href="https://github.com/MerlijnW70/zodforge"
              target="_blank"
              class="text-gray-400 hover:text-primary-400 transition-colors"
              aria-label="GitHub"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </a>
            <a
              href="https://twitter.com/zodforge"
              target="_blank"
              class="text-gray-400 hover:text-primary-400 transition-colors"
              aria-label="Twitter"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </footer>
  </main>
</BaseLayout>
