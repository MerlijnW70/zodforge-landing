<section class="relative min-h-screen flex items-center justify-center px-4 py-20">
  <!-- Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-600/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-600/20 rounded-full blur-3xl"></div>
  </div>

  <div class="relative max-w-7xl mx-auto text-center">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600/10 border border-primary-600/30 rounded-full mb-8">
      <svg class="w-4 h-4 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
      </svg>
      <span class="text-sm font-medium text-primary-300">AI-Powered Schema Refinement</span>
    </div>

    <!-- Headline -->
    <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
      Turn Schemas into
      <br />
      <span class="gradient-text">Production-Ready Code</span>
    </h1>

    <!-- Subheadline -->
    <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed">
      AI-powered schema refinement with <strong class="text-white">OpenAI GPT-4</strong> and
      <strong class="text-white">Claude 3.5</strong> fallback. Get smarter validation, better types,
      and 99.99% uptime.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
      <a href="#pricing" class="btn-primary">
        Start Free Trial
        <svg class="inline w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
      <a
        href="https://github.com/MerlijnW70/zodforge"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-secondary"
      >
        <svg class="inline w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        View on GitHub
      </a>
    </div>

    <!-- Social Proof / Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-primary-400 mb-2">99.99%</div>
        <div class="text-sm text-gray-400">Uptime</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-primary-400 mb-2">2</div>
        <div class="text-sm text-gray-400">AI Providers</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-primary-400 mb-2">&lt;1ms</div>
        <div class="text-sm text-gray-400">Cached Response</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-primary-400 mb-2">306</div>
        <div class="text-sm text-gray-400">Tests Passing</div>
      </div>
