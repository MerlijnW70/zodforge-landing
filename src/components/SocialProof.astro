---
const testimonials = [
  {
    quote: "ZodForge saved us hours of manual schema writing. The AI refinements are spot-on and catch edge cases we'd miss.",
    author: "Sarah Chen",
    role: "Senior Backend Engineer",
    company: "TechCorp",
    avatar: "SC",
  },
  {
    quote: "Finally, a tool that understands TypeScript validation patterns. The Claude fallback gives us peace of mind for production.",
    author: "Marcus Johnson",
    role: "CTO",
    company: "StartupXYZ",
    avatar: "MJ",
  },
  {
    quote: "We integrated ZodForge into our CI/CD pipeline. Schema generation is now automated and error-free. Game changer!",
    author: "Priya Patel",
    role: "DevOps Lead",
    company: "DataFlow Inc",
    avatar: "PP",
  },
];

const stats = [
  { value: "10,000+", label: "Schemas Generated" },
  { value: "500+", label: "Happy Developers" },
  { value: "99.99%", label: "Success Rate" },
  { value: "<2s", label: "Avg Response Time" },
];
---

<section class="py-24 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-20">
      {
        stats.map((stat) => (
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold gradient-text mb-2">{stat.value}</div>
            <div class="text-sm text-gray-400">{stat.label}</div>
          </div>
        ))
      }
    </div>

    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Loved by <span class="gradient-text">Developers</span>
      </h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Join hundreds of developers who trust ZodForge for production-grade schema generation
      </p>
    </div>

    <!-- Testimonials -->
    <div class="grid md:grid-cols-3 gap-8">
      {
        testimonials.map((testimonial) => (
          <div class="card hover:border-primary-600/50 transition-all duration-300">
            <!-- Quote -->
            <div class="mb-6">
              <svg class="w-10 h-10 text-primary-600/30 mb-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M11.192 15.757c0-.88-.23-1.618-.69-2.217-.326-.412-.768-.683-1.327-.812-.55-.128-1.07-.137-1.54-.028-.16-.95.1-1.956.76-3.022.66-1.065 1.515-1.867 2.558-2.403L9.373 5c-.8.396-1.56.898-2.26 1.505-.71.607-1.34 1.305-1.9 2.094s-.98 1.68-1.25 2.69-.346 2.04-.217 3.1c.168 1.4.62 2.52 1.356 3.35.735.84 1.652 1.26 2.748 1.26.965 0 1.766-.29 2.4-.878.628-.576.942-1.365.942-2.368l.002.003zm9.124 0c0-.88-.23-1.618-.69-2.217-.326-.42-.77-.692-1.327-.817-.56-.124-1.074-.13-1.54-.022-.16-.94.09-1.95.75-3.02.66-1.06 1.514-1.86 2.557-2.4L18.49 5c-.8.396-1.555.898-2.26 1.505-.708.607-1.34 1.305-1.894 2.094-.556.79-.97 1.68-1.24 2.69-.273 1-.345 2.04-.217 3.1.168 1.4.62 2.52 1.356 3.35.735.84 1.652 1.26 2.748 1.26.965 0 1.766-.29 2.4-.878.628-.576.942-1.365.942-2.368z"/>
              </svg>
              <p class="text-gray-300 leading-relaxed italic">"{testimonial.quote}"</p>
            </div>

            <!-- Author -->
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary-600 to-cyan-600 flex items-center justify-center font-bold text-white">
                {testimonial.avatar}
              </div>
              <div>
                <div class="font-semibold text-white">{testimonial.author}</div>
                <div class="text-sm text-gray-400">
                  {testimonial.role}
                  <span class="text-gray-600"> â€¢ </span>
                  {testimonial.company}
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- G2/Capterra Style Rating (Simulated) -->
    <div class="mt-16 flex flex-col items-center gap-4">
      <div class="flex items-center gap-2">
        {[...Array(5)].map(() => (
          <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
        ))}
        <span class="ml-2 text-gray-300 font-semibold">4.9/5.0</span>
      </div>
      <p class="text-sm text-gray-400">Based on 127 reviews from satisfied developers</p>
    </div>
  </div>
</section>
